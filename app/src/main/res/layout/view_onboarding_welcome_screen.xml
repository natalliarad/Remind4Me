<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/icon_layout_width"
        android:layout_height="0dp"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/padding_big"
        android:layout_weight="2"
        android:paddingTop="@dimen/padding_big">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_background"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/welcome_icon_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_foreground"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_big">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_big"
            android:text="@string/onboarding_welcome_title"
            android:textColor="@color/black_primary"
            android:textSize="@dimen/font_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_big"
            android:layout_marginTop="@dimen/padding_small"
            android:layout_marginEnd="@dimen/padding_big"
            android:text="@string/onboarding_welcome_summary"
            android:textColor="@color/black_secondary"
            android:textSize="@dimen/font_16" />

    </LinearLayout>
</LinearLayout>
