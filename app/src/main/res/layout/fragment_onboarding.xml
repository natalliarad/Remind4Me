<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_onboarding"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_normal"
        android:paddingEnd="@dimen/padding_normal"
        android:paddingBottom="@dimen/padding_normal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/onboarding_go_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height_standard"
            android:backgroundTint="@color/green_600"
            android:text="@string/onboarding_go"
            android:visibility="invisible"
            app:iconSize="@dimen/icon_size_normal" />
    </LinearLayout>
</LinearLayout>
